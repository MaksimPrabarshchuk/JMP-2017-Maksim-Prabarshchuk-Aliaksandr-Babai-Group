<ehcache>
    <defaultCache maxElementsInMemory="10000"
                  eternal="false"
                  timeToIdleSeconds="1200"
                  timeToLiveSeconds="1200"
                  overflowToDisk="true"
                  diskPersistent="false"
                  diskExpiryThreadIntervalSeconds="120"
                  memoryStoreEvictionPolicy="LRU"/>
    <cache name="user"
           maxElementsInMemory="10000"/>
    <cache name="role"
           maxElementsInMemory="10000"/>
</ehcache>